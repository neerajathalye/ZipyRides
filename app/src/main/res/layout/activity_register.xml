<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg_imagetwo_opt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.futureblink.zipy.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:contentDescription="@string/logo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo_opt"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/text"
                android:textAlignment="center"
                android:layout_below="@id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:typeface="sans"
                android:text="@string/please_enter_your_details"/>
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/nameicon"
                    android:contentDescription="@string/name_icon"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp" />
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/name"
                    android:typeface="sans"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/rounded_box_edit_text"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/row1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mailicon"
                    android:contentDescription="@string/name_icon"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp" />
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/email"
                    android:typeface="sans"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/rounded_box_edit_text"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/row2"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/addicon"
                    android:contentDescription="@string/name_icon"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp" />
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/address"
                    android:typeface="sans"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/rounded_box_edit_text"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    android:textSize="18sp"/>
            </LinearLayout>
            <Button
                android:layout_below="@id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/app_orange"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="45dp"
                android:typeface="sans"
                android:onClick="goToSignIn"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bkg"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg_imagetwo_opt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.futureblink.zipy.BookingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:contentDescription="@string/logo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/logo_opt" />
            <TextView
                android:id="@+id/text"
                android:layout_below="@id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_your_type_of_vehicle"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAlignment="center"
                android:typeface="sans"
                android:layout_marginBottom="10dp" />
            <LinearLayout
                android:id="@+id/bikeScooterContainer"
                android:layout_below="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/scooter"
                    android:layout_weight="1"
                    android:contentDescription="@string/scooter"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/scooter_opt" />
                <ImageView
                    android:id="@+id/bike"
                    android:contentDescription="@string/bike"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/bike_opt" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/counterContainer"
                android:gravity="center_horizontal"
                android:layout_below="@id/bikeScooterContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/scooterContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp">
                    <Button
                        android:id="@+id/minusButtonScooter"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:textColor="@color/app_orange"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="@string/minusButton"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/scooterCounter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/clickCounter"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:background="#00FFFFFF"/>
                    <Button
                        android:background="#00ababab"
                        android:id="@+id/plusButtonScooter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:textColor="@color/app_orange"
                        android:text="@string/plusButton"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bikeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/minusButtonBike"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:textColor="@color/app_orange"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="@string/minusButton"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/bikeCounter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:text="@string/clickCounter"
                        android:textColor="#FFFFFF"
                        android:background="#00FFFFFF"/>
                    <Button
                        android:background="#00ababab"
                        android:id="@+id/plusButtonBike"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:textColor="@color/app_orange"
                        android:text="@string/plusButton"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/nextButton"
                android:layout_below="@id/counterContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/app_orange"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="25dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bkg"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
